            <property name="target_pos" value="@10004" ctype="@"/>
            <property name="duration" value="0.3" ctype="float" />
        </action> -->

    </action_set>

    <!-- 二段技能1，type必须为AST_STATUS类型，不能有ActionTrack节点，必须包含ActionCombatEvent -->
    <action_set name="5304_cast" type="AST_STATUS" speed_factor="SCT_ATTACK_SPEED">

        <!-- 技能动作 -->
        <action type="ActionAnimation" start_time="0.0" stop_when_cancel="true">
            <property name="name" value="attack01" ctype="string" />
            <property name="transition_animation" value="" ctype="string" />
        </action>

        <!-- 通用起手光效-->
        <action type="ActionEffectSprite" start_time="0.0" stop_when_cancel="true">
            <property name="prefeb" value="Prefabs/Effect/E9101d1a" ctype="string" />
            <property name="offset" value="1.2 0.8 -0.1" ctype="vector3"/>
            <property name="scale" value="1.8 1.8 1" ctype="vector3"/>
        </action>

        <!-- 光效节点起手-->
        <action type="ActionLaserSwing" start_time="Hit" stop_when_cancel="true">
            <property name="prefeb" value="Prefabs/Effect/E9101d1b" ctype="string" />
            <property name="scale" value="1.0 2.0 1" ctype="vector3"/>
            <property name="offset" value="0.0 0.6 -0.1" ctype="vector3"/>
            <property name="end_pos" value="@10008" ctype="@"/>
            <property name="basic_length" value="5" ctype="float"/>
        </action>

        <!-- 伤害命中-->
        <action type="ActionHit" start_time="Hit" stop_when_cancel="true">
            <property name="hit_index" value="0" ctype="int" />
        </action>

        <!-- 效果命中-->
        <action type="ActionHit" start_time="Hit" stop_when_cancel="true">
            <property name="hit_index" value="1" ctype="int" />
            <property name="depend_hit" value="0" ctype="lpc" />
        </action>

        <!-- 音效 -->
        <action type="ActionSound" start_time="0.0" stop_when_cancel="true">
            <property name="sound" value="s_magic_ready" ctype="string" />
            <property name="adjust_speed" value="false" ctype="bool" />
        </action>

        <!-- 音效 -->
        <action type="ActionSound" start_time="Hit" stop_when_cancel="true">
            <property name="sound" value="s_magic_shoot" ctype="string" />
            <property name="adjust_speed" value="false" ctype="bool" />
        </action>

        <!-- 二段技能战斗结束 -->
        <action type="ActionCombatEvent" start_time="1.1333" stop_when_cancel="false" create_when_canceled = "true">
            <!-- 触发一段技能连击效果 -->
            <property name="event" value="COMBO_ATTACK_END" ctype="string" />
            <!-- 事件通知cookie，这个地方必须返回第一段技能的cookie -->
            <property name="cookie" value="@10106" ctype="@" />
        </action>

    </action_set>

