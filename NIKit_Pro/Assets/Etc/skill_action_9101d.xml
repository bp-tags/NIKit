    <!-- 棱镜模块 射线 -->
    <action_set name="5303_cast" type="AST_ACT" speed_factor="SCT_ATTACK_SPEED">

        <!-- 起手位移
        <action type="ActionTrack" start_time="0.0" stop_when_cancel="false">
            <property name="track" value="powerSlay" ctype="string" />
            <property name="target_pos" value="@10003" ctype="@"/>
            <property name="duration" value="0.7" ctype="float" />
        </action> -->

        <!-- 连续攻击 -->
        <action type="ActionComboAttack" start_time="0.0" stop_when_cancel="true">
            <!-- 脚本不需要变，详细配置在技能表check_combo_script和check_combo_args属性实现 -->
            <property name="combo_check_script" value="10105" ctype="int" />
        </action>

        <!-- 命中 -->
        <!-- start_time必须为COMBO_ATTACK_HIT -->
        <action type="ActionHit" start_time="COMBO_ATTACK_HIT" stop_when_cancel="true">
            <property name="hit_index" value="0" ctype="int" />
        </action>

        <!-- 技能动作 -->
        <action type="ActionAnimation" start_time="ATTACK_END" stop_when_cancel="true">
            <property name="name" value="attack03" ctype="string" />
        </action>

        <!-- 归位位移
        <action type="ActionTrack" start_time="ATTACK_END" stop_when_cancel="false" create_when_canceled = "true">
